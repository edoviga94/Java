public class Dado extends OggetoD_azzardo {
	private int valore;
	
	@Override
	public void lancia() {
		valore = (int) (Math.random() * 6 + 1);
	}
	
	@Override
	public void stampa() {
		System.out.println("Risultato del lancio del dado: " + valore);
	}
}
