import java.util.Date;
import java.util.Scanner;

public class ListaSpesa {
	
	public static void main(String[] args) {
		
		
		Scanner in = new Scanner(System.in);
		
		Date scadenza1 = new Date(2020, 7, 30);
		Date scadenza2 = new Date(2020, 7, 20);

		
		boolean sconto;
		System.out.println("Si possieda la tessera fedeltà? Y/S");
		
		String risposta = in.nextLine();
		if(risposta.equals("Y"))
			sconto = true;
		else
			sconto = false;
		Prodotti[] lista = new Prodotti[5];
		
		lista[0] = new Prodotti("A-0100-Z", "Bicchiere", 5);
		lista[1] = new ProdottiAlimentari("A-0100-Z", "Bicchiere", 5, scadenza1);
		lista[2] = new ProdottiNonAlimentari("A-0100-Z", "Bicchiere", 5, "carta");
		lista[3] = new ProdottiAlimentari("A-0100-Z", "Bicchiere", 5, scadenza2);
		lista[4] = new ProdottiNonAlimentari("A-0100-Z", "Bicchiere", 5, "umido");

		
		
	}

}
